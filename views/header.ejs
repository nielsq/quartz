<style>
  * {box-sizing: border-box;}
  
  body { 
    margin: 0;
    font-family: Arial, Helvetica, sans-serif;
  }
  
  .header {
    overflow: hidden;
    background-color: #f1f1f1;
    padding: 20px 10px;
  }
  
  .header a {
    float: left;
    color: black;
    text-align: center;
    padding: 12px;
    text-decoration: none;
    font-size: 18px; 
    line-height: 25px;
    border-radius: 4px;
  }
  
  .header a.logo {
    font-size: 25px;
    font-weight: bold;
  }
  
  .header a:hover {
    background-color: #ddd;
    color: black;
  }
  
  .header a.active {
    background-color: dodgerblue;
    color: white;
  }

  .header a.semiactive {
    background-color: rgb(255, 195, 30);
    color: white;
  }
  
  .header-right {
    float: right;
  }
  
  @media screen and (max-width: 500px) {
    .header a {
      float: none;
      display: block;
      text-align: left;
    }
    
    .header-right {
      float: none;
    }
  }
</style>


<div class="header">
  <a href="/" class="logo">QUARTZ</a>
  <div class="header-right">
    <a <% if(page == "home") { %> class="active" <% } %>  href="/">Home</a>
    <a <% if(page == "channel" && same) { %> class="semiactive" <% } else if(page == "channel") {%> class="active" <% } %> href="/mychannel">Channel</a>
     <% if(user) { %> <a href="#" onclick="logout();">Logout</a> <% } else { %> <a <% if(page == "login") { %> class="active" <% } %> href="/login">Login</a><% } %>
    
  </div>
</div>

<form id="logout"action="/logout?_method=DELETE" method="POST" style="display:none">
</form>


<script>
  
  function logout(){
    document.getElementById("logout").submit();
  }

</script>